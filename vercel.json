{
	"version": 2,
	"builds": [
		{ "src": "client/**", "use": "@vercel/static" },
		{ "src": "api/index.js", "use": "@vercel/node" }
	],
	"routes": [
		{ "src": "/api/(.*)", "dest": "http://localhost:3001/api/$1" },
		{ "src": "/(.*)", "dest": "http://localhost:3000/$1" }
	],
	"env": {
		"JSON_SERVER_URL": "http://localhost:3001"
	},
	"dev": {
		"routes": [
			{
				"src": "/api/(.*)",
				"dest": "http://localhost:3001/api/$1",
				"methods": ["GET", "POST", "PUT", "PATCH", "DELETE"]
			},
			{ "src": "/(.*)", "dest": "http://localhost:3000/$1" }
		]
	}
}
