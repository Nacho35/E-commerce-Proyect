{
	"version": 2,
	"functions": {
		"api/**": {
			"memory": 512,
			"runtime": "@vercel/node@1.10.1",
			"maxDuration": 30
		},
		"json-server": {
			"memory": 512,
			"runtime": "vercel-node@0.12.0",
			"includeFiles": "api/db.json"
		}
	},
	"routes": [
		{
			"src": "/api/(.*)",
			"dest": "api/$1",
			"methods": ["GET", "POST", "PUT", "PATCH", "DELETE", "OPTIONS"]
		},
		{ "src": "/(.*)", "dest": "client/$1" }
	],
	"env": {
		"NODE_SERVER_PORT": "8080",
		"JSON_SERVER_PORT": "3001",
		"REACT_SERVER_PORT": "3000"
	}
}
